{
  "name": "rust",
  "version": "1.0.0",
  "description": "Network monitoring desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "install-deps": "cd src && pip install -r requirements.txt",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "network",
    "monitor",
    "electron",
    "python"
  ],
  "author": "Network Monitor",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "python-shell": "^5.0.0"
  },
  "build": {
    "appId": "com.networkmonitor.app",
    "productName": "Network Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src",
        "to": "src",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icons/magnifying-glass.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Network Monitor"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/magnifying-glass.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/magnifying-glass.png"
    }
  }
}
